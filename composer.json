{
	"name":"wpscholar/wp-skeleton",
	"description":"Setup a new WordPress installation via Composer.",
	"license":"GPL-2.0+",
	"type":"project",
	"keywords":[
		"WordPress",
		"skeleton",
		"CMS",
		"blog",
		"composer",
		"wpackagist"
	],
	"authors":[
		{
			"name":"Micah Wood",
			"email":"micah@wpscholar.com",
			"homepage":"http://wpscholar.com",
			"role":"Developer"
		}
	],
	"support":{
		"source":"https://github.com/wpscholar/wp-skeleton",
		"issues":"https://github.com/wpscholar/wp-skeleton/issues"
	},
	"repositories":[
		{
			"type":"composer",
			"url":"https://wpackagist.org"
		},
		{
			"type":"composer",
			"url":"https://composer.beapi.fr"
		},
		{
			"type":"vcs",
			"url":"https://github.com/wemakecustom/wp-mu-loader/"
		},
		{
			"type":"vcs",
			"url":"https://github.com/BeAPI/bea-autoload/"
		}
	],
	"require":{
		"johnpbloch/wordpress":"*@stable",
		"composer/installers":"*@stable",
		"wemakecustom/wp-mu-loader":"*",
		"bea/autoload":"dev-master",
		"wpackagist-theme/twentyseventeen":"*@stable",
		"acf/advanced-custom-fields-pro":"*@stable",
		"wpackagist-plugin/custom-post-type-ui":"*@stable"
	},
	"suggest":{
		"wp-cli/wp-cli":"*@stable"
	},
	"extra":{
		"wordpress-install-dir":"wp",
		"installer-paths":{
			"content/plugins/{$name}":[
				"type:wordpress-plugin"
			],
			"content/themes/{$name}":[
				"type:wordpress-theme"
			],
			"content/mu-plugins/{$name}":[
				"type:wordpress-muplugin"
			]
		}
	},
	"scripts":{
		"generate-salts":[
			"echo '<?php' > salt.php && curl -L https://api.wordpress.org/secret-key/1.1/salt/ >> salt.php"
		],
		"move-mu-loader":[
			"mv content/mu-plugins/mu-loader/mu-require.php content/mu-plugins/"
		],
		"post-package-install":[
			"BEA\\ComposerInstaller\\ManageRequiredPlugins::postPackageInstall"
		],
		"post-package-uninstall":[
			"BEA\\ComposerInstaller\\ManageRequiredPlugins::postPackageUninstall"
		],
		"post-create-project-cmd":[
			"composer run move-mu-loader",
			"composer run generate-salts"
		],
		"scaffold-plugin":[
			"BEA\\ComposerInstaller\\PluginBoilerplateScaffold::scaffoldPlugin"
		]
	},
	"autoload":{
		"psr-4":{
			"BEA\\ComposerInstaller\\":"bin/"
		},
		"files":[
			"wp-config-local.php"
		]
	}
}
